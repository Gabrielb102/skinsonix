{
  "compilerOptions": {
    // Basic configurations
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // Advanced configurations for bundler (Vite/Rollup)
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "types": [
      "node",
      "@tailwindcss/vite"
    ],
    "isolatedModules": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.main.json"
    }
  ],
  // Path aliases
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@components/*": [
      "src/frontend/components/*"
    ],
  },
  // Files to include
  "include": [
    "src/frontend/**/*"
  ]
}
